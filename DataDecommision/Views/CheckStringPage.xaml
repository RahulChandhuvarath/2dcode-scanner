        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Left"  Margin="60,0,0,0" FontWeight="Bold"  TextWrapping="Wrap" Text="MATCHED" VerticalAlignment="Center"  FontSize="25"  Foreground="DarkBlue" />
            <Label Grid.Column="1" HorizontalAlignment="Left" FontWeight="Bold" VerticalAlignment="Center"  FontSize="45"  Foreground="ForestGreen" Content="10"/>
        </Grid>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0" HorizontalAlignment="Left"  Margin="60,0,0,0" FontWeight="Bold"  TextWrapping="Wrap" Text="NOT MATCHED" VerticalAlignment="Center"  FontSize="25"  Foreground="DarkBlue" />
            <Label Grid.Column="1" HorizontalAlignment="left" FontWeight="Bold" VerticalAlignment="Center"  FontSize="45"  Foreground="Red" Content="2"/>
        </Grid>

        <Grid Grid.Row="5">
            <Button  Background="DarkGreen" Height="70" Width="350" FontSize="35" HorizontalAlignment="Center" Content="START SCAN"  FontWeight="Bold" Foreground="White"  VerticalAlignment="Center" Command="{Binding ButtonCheckClick}" />
